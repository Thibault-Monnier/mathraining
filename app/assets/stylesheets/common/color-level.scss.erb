/* USED FOR USER COLORS */

[data-bs-theme="light"] {
  .text-color-level-inactive {
    color: #BBBB00!important;
  }
}

[data-bs-theme="dark"] {
  .text-color-level-inactive {
    color: #BBBB00!important;
  }
}

[data-bs-theme="light"] {
  .text-color-level-altesse {
    color: #E6C619!important;
  }
}

[data-bs-theme="dark"] {
  .text-color-level-altesse {
    color: #FFD700!important;
  }
}

<% Color.all.each do |c| %>
  [data-bs-theme="light"] {
    .text-color-level-<%= c.id %> {
      color: <%= c.color %>!important;
    }
  }

  [data-bs-theme="dark"] {
    .text-color-level-<%= c.id %> {
      color: <%= c.dark_color %>!important;
    }
  }
<% end %>
