<% provide(:title, "Modifier les catégories de sujets") %>

<h1><%= title_subjects("Modifier les catégories") %></h1>

<table cellpadding="5" class="mb-3">
  <% Category.order(:id).each do |c| %>
    <%= form_for(c) do |g| %>
      <tr>
        <td style="width:15px;">
          -
        </td>
        <td class="p-1">
          <%= g.text_field :name, :class => "form-control", :style => "width:200px;" %>
        </td>
        <td>
          <%= g.submit "Modifier cette catégorie", class: "btn btn-primary" %>
        </td>
        <td class="p-2">
          <%= link_to "Supprimer cette catégorie", c, method: :delete, data: { confirm: "Êtes-vous #{current_user.sure} de vouloir supprimer cette catégorie ?" } %>
        </td>
      </tr>
    <% end %>
  <% end %>

  <tr>
    <%= form_for(:category) do |f| %>
      <td>
      </td>
      <td class="p-1">
        <%= f.text_field :name, :class => "form-control", :style => "width:200px;"  %>
      </td>
      <td>
        <%= f.submit "Ajouter cette catégorie", class: "btn btn-primary" %>
      </td>
      <td>
      </td>
    <% end %>
  </tr>

</table>
