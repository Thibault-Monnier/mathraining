<script>allowhide = false</script> <!-- This disables the "[hide][/hide]" in previewsafe -->

<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
  <%= f.label "Numéro" %>
  <%= f.number_field :number, :class => "form-control", :style => "width:70px;", :min => 1, :disabled => (@contest.status > 0 || current_user.other) %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <div class="well" id="MathPreview"></div>
  <div class="well hidden-preview" id="MathBuffer"></div>
  <%= render 'subjects/smiley', hiddentext: false %>
  <%= f.text_area :description, :class => "form-control", :maxlength => "8000", :style => "height:200px; margin-top:5px;", :id=>"MathInput", :onkeyup => "PreviewSafe.MyUpdate()", :disabled => current_user.other %>
</div>

<div class="checkbox">
<label>
<%= f.check_box :medal %>
Attribuer des médailles au terme de ce concours
</label>
</div>

<script>
PreviewSafe.Init();
PreviewSafe.Update();
</script>
