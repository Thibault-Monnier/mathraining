<% provide(:title, 'Modifier un concours') %>

<h1><%= title_3((link_to "Concours", contests_path), (link_to "Concours ##{@contest.number}", @contest), "Modifier") %></h1>

<%= form_for @contest do |f| %>
  <%= render 'form', f: f %>
  <%= f.submit "Modifier", class: "btn btn-lg btn-primary", :disabled => current_user.other %>
<% end %>
