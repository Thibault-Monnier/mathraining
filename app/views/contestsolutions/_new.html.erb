<script>allowhide = false</script> <!-- This disables the "[hide][/hide]" in previewsafe -->

<% @ancientexte = session[:ancientexte] %>
<% session[:ancientexte] = nil %>

<%= form_for :contestsolution, url: contestproblem_contestsolutions_path(@contestproblem), :html => { :multipart => true } do |f| %>
  <h3>Ma solution</h3>
  <%= render 'submissions/form', f: f %>

  <!-- Pièces jointes -->
  <span id="spanFiles"></span>
  <input type="button" value="Ajouter une pièce jointe" onclick="Joint.add()" <%= 'disabled="disabled"' if current_user.other %> />
  <br/><br/>

  <%= f.submit "Enregistrer", class: "btn btn-primary", style: "margin-bottom:10px;", :disabled => current_user.other %>
  <br/>(Vous pourrez modifier votre solution jusqu'à la date limite de résolution du problème.)
<% end %>

<script>
PreviewSafe.Init();
PreviewSafe.Update();
</script>
