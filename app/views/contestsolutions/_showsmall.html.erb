<!-- Couleur -->
<% cansee = true %>
<% if !sol.corrected || (sol.contestproblem.status < 4 && !@contest.is_organized_by_or_root(current_user)) %>
  <tr class="warning">
  <% cansee = false %>
<% elsif sol.score == 7 %>
  <tr class="success">
<% else %>
  <tr class="danger">
<% end %>

<!-- Icone -->
<td style="width:50px; text-align:center;">
  <% if !cansee %>
    <%= image_tag "tiret.gif" %>
  <% else %>
    <%= image_tag sol.icon %>
  <% end %>
</td>

<!-- Qui -->
<td style="width:200px;">
  <% if sol.official %>
    <b>Solution officielle</b>
  <% else %>
    <%= raw(sol.user.linked_name) %>
  <% end %>
</td>

<td style="width:40px; text-align:center;">
  <%= sol.score if cansee && !sol.official? && sol.score >= 0 %>
  <%= '-' if !cansee || sol.official? || sol.score < 0 %>
</td>

<!-- Voir -->
<td style="text-align:center; width:56px;">
<%= link_to "Voir", contestproblem_path(sol.contestproblem, :sol => sol.id) %>
</td>

</tr>
