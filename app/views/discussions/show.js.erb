<% @myfiles = Myfile.where(:myfiletable => @tchatmessages).to_a %>
<% @fakefiles = Fakefile.where(:fakefiletable => @tchatmessages).to_a %>
<% @tchatmessages.each do |m| %>
  $('#all-messages').append('<%= j render 'tchatmessages/show', m: m %>');
<% end %>
<% if @tchatmessages.next_page %>
  $('#infinite-scrolling').html('<div style="display:none;"><%= j will_paginate @tchatmessages %></div>');
<% else %>
  $('#infinite-scrolling').remove();
  $('.toreplace').remove();
<% end %>
