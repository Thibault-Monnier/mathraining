<!DOCTYPE html>
<% @mt_theme = 'light' %>
<% @mt_theme = 'dark' if cookies.has_key?(:dark_theme) %>
<html data-bs-theme="<%= @mt_theme %>">
  <head>  
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      tex2jax: {
        inlineMath: [ ['$','$'] ],
        processEscapes: true
      },
      "HTML-CSS": {
        mtextFontInherit: true,
        linebreaks: { automatic: true }
      },
      CommonHTML: {
        linebreaks: { automatic: true }
      },
      SVG: {
        linebreaks: { automatic: true }
      },
      messageStyle: "simple" 
    })
    </script>
    
    <!-- NB: Before we were using MathJax 2.7.1. with this manual bug fix: https://github.com/mathjax/MathJax/issues/2005 -->
    <!-- Now we try using MathJax 2.7.5 that is supposed to contain this bug fix (the bug was missing text on Safari/IOS) -->
    <!-- Fix for the bug on Safari/IOS : will be included in the version 2.7.5 of Mathjax -->
    
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.5/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <% if @signed_in && current_user.accept_analytics && Rails.env.production? %>
      <!-- Google tag (gtag.js) -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-FZ7Q2MRZ89"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-FZ7Q2MRZ89');
      </script>
    <% end %>
    <title><%= full_title(yield(:title)) %></title>
    <link rel="apple-touch-icon" sizes="57x57" href="/icon-57.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/icon-76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/icon-120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/icon-152.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/icon-167.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/icon-180.png">
    <link rel="icon" sizes="192x192" href="/icon-192.png">
    <link rel="icon" sizes="128x128" href="/icon-128.png">
    
    <%= stylesheet_link_tag 'application', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'application-print', :media => 'print' %>
    
    <%= csrf_meta_tags %>

    <% # mathjax_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= javascript_importmap_tags %>
    <script>
      function initAndUpdatePreviewAtLoad() {
        window.addEventListener("load", () => {
          Preview.Init();
          Preview.Update();
        });
      }
      
      function initAndUpdatePreviewSafeAtLoad(disableBBCode = false, disableHiddenText = false) {
        window.addEventListener("load", () => {
          PreviewSafe.Init();
          if (disableBBCode) {
            PreviewSafe.SetBBCode(false);
          }
          if (disableHiddenText) {
            PreviewSafe.SetHiddenText(false);
          }
          PreviewSafe.Update();
        });
      }
    </script>
  </head>
  
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> py-2 my-1"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <% debug(params) if Rails.env.development? %>
    </div>
    
    <% if defined? @benchmark_start_time %>
      <div class="mb-3 text-center">Temps total de chargement: <b><%= ((Time.now.to_f - @benchmark_start_time.to_f) * 1000).round(1) %> ms</b></div>
    <% end %>
  </body>
</html>
