<% provide(:title, 'Modifier une politique de confidentialité') %>

<h1>
  Modifier une politique de confidentialité
</h1>

<%= form_for(@privacypolicy) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <!-- Contenu de la politique de confidentialité -->
  <div class="form-group">
    <%= f.label :content %>
    <div class="well" id="MathPreview"></div>
    <div class="well hidden-preview" id="MathBuffer"></div>
    <%= render 'theories/font' %>
    <%= f.text_area :content, :class => "form-control", :maxlength => "16000", :style => "height:200px; margin-top:5px;", :id=>"MathInput", :onkeyup => "Preview.MyUpdate()" %>
  </div>
  <%= f.submit "Modifier", class: "btn btn-lg btn-primary" %>
<% end %>

<script>
Preview.Init();
Preview.Update();
</script>
