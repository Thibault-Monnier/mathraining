<% provide(:title, 'Créer un problème') %>

<h1>
<span style="font-size:16px;">Cours ></span>
<span style="font-size:24px;"><%= link_to @section.name, pb_sections_path(@section) %> ></span>
Créer un problème
</h1>

<%= form_for(@problem, url: section_problems_path) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <!-- Enoncé -->
  <div class="form-group">
    <%= f.label "Enoncé" %>
    <div class="well" id="MathPreview"></div>
    <div class="well" id="MathBuffer" style="visibility:hidden; position:absolute; top:0; left: 0"></div>
    <%= render 'theories/font' %>
    <%= f.text_area :statement, :class => "form-control", :maxlength => "8000", :style => "height:200px; margin-top:5px;", :id=>"MathInput", :onkeyup => "fakeupdate()" %>
  </div>
  
  <!-- Origine -->
  <div class="form-group">
    <%= f.label "Origine" %>
    <%= f.text_field :origin, :class => "form-control", :maxlength => "255", :style => "width:500px;", :placeholder => "Exemple : International Mathematical Olympiad 2030, Problème 1" %>
  </div>

  <!-- Niveau -->
  <div class="form-group">
    <%= f.label "Niveau (entre 1 et 5)" %>
    <%= f.number_field :level, :class => "form-control", :style => "width:50px;", :min => 1, :max => 5 %>
  </div>

  <%= render 'niveau_guideline' %>
  <%= f.submit "Créer", class: "btn btn-lg btn-primary" %>
<% end %>
    
<script>
Preview.Init();
Preview.Update();
</script>
