var code_input = document.getElementById("code-<%= @puzzle.id %>");
var status_div = document.getElementById("status-<%= @puzzle.id %>");
var submit_btn = document.getElementById("submit-<%= @puzzle.id %>");
<% if @code_ok %>
  curGuesses[<%= @puzzle.id %>] = "<%= @new_code %>";
  code_input.value = "<%= @new_code %>";
  checkStatus('<%= @puzzle.id %>');
<% else %>
  setClass(status_div, "error");
  status_div.innerHTML = "Format incorrect"
  submit_btn.disabled = "disabled"
<% end %>
