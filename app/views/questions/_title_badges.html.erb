<% pt = question.value %>

<% pct = 0 %>
<% pct = question.nb_first_guesses.to_f / (question.nb_correct + question.nb_wrong).to_f if question.nb_correct + question.nb_wrong > 0 %>
<% pct2 = [1.4*pct,1].min %>

<% if !@section.fondation %>
  <span class="badge rounded-pill py-2 px-3 <%= solved ? 'bg-success' : 'bg-secondary' %>" style="font-size:18px;"><%= pt %>&nbsp;points</span>
<% end %>
