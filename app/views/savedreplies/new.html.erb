<% provide(:title, 'Créer une réponse') %>

<h1><%= title_submission(@submission, "Créer une réponse") %></h1>

<%= form_for(@savedreply, url: savedreplies_path(:action => :create, :sub => @submission)) do |f| %>
  <%= render 'form', f: f %>
  <%= f.submit "Créer", class: "btn btn-lg btn-primary" %>
<% end %>
