<% provide(:title, 'Modifier une section') %>

<h1>
<span style="font-size:16px;">Cours ></span>
<span style="font-size:24px;"><%= link_to @section.name, @section %> ></span>
Modifier
</h1>

<%= form_for(@section) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :nom %>
    <%= f.text_field :name, :class => "form-control", :maxlength => "255", :style => "width:400px;" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <div class="well" id="MathPreview"></div>
    <div class="well" id="MathBuffer" style="visibility:hidden; position:absolute; top:0; left: 0"></div>
    <%= render 'theories/font' %>
    <%= f.text_area :description, :class => "form-control", :maxlength => "8000", :style => "height:200px; margin-top:5px;", :id=>"MathInput", :onkeyup => "fakeupdate()" %>
  </div>
  <%= f.submit "Editer", class: "btn btn-lg btn-primary" %>
<% end %>

<script>
Preview.Init();
Preview.Update();
</script>
