<% q = 0 %>
<% if(params.has_key?:q) %>
  <% q = params[:q].to_i %>
<% end %>

<table class="table table-bordered message">

  <!-- Cas normal -->
  <tr class="hidden-xs info">

  <!-- Nom -->
  <td class="author">
    <%= raw(m.user.linked_name) %>
  </td>

  <!-- Date -->
  <td class="date">
  <%= Message.write_date(m.created_at.in_time_zone) %>
  </td>
  </tr>

  <!-- Cas gsm -->

  <!-- Nom -->
  <tr class="visible-xs info">
  <td class="author">
    <%= raw(m.user.linked_name) %>
  </td>
  </tr>

  <!-- Date -->
  <tr class="visible-xs info">
  <td class="date">
  <%= Message.write_date(m.created_at.in_time_zone) %>
  </td>
  </tr>

  <!-- Contenu du message -->
  <tr><td colspan="2" class="content">
  <div>
  <% bb = bbcode(m.content) %>
  <% while bb.sub!(/\[hide=(?:&quot;)?(.*?)(?:&quot;)?\](.*?)\[\/hide\]/mi) {"<div style='background-color:#FFFFCC; margin-top:10px; border:1px solid orange; padding:10px;'><a href='#' id='show#{@nb_indice}' onclick='showStuff(#{@nb_indice}); return false;' style='display:inline;' class='btn btn-default btn-grey'>#{$1}</a><a href='#' id='hide#{@nb_indice}' style='display:none;' class='btn btn-default btn-grey' onclick='hideStuff(#{@nb_indice}); return false;'>#{$1}</a><span id='indice#{@nb_indice}' style='display:none;'><br/><br/>#{$2}</span></div>"} %>
  <% @nb_indice = @nb_indice+1 %>
  <% end %>

  <div id="normal<%= m.id %>" style="display:inline;">
  <%= raw(bb) %>
  <div style="text-align:right; float:right;">&nbsp; <a href='#' onclick='return showAnormal(<%= m.id %>)'>(Montrer le code)</a></div>
  </div>

  <div class="tex2jax_ignore" id="anormal<%= m.id %>" style="display:none;">
  <%= raw((h m.content).gsub(/\n/, '<br/>')) %>
  <div style="text-align:right; float:right;">&nbsp; <a href='#' onclick='return showNormal(<%= m.id %>)'>(Cacher le code)</a></div>
  </div>

  <!-- Pièces jointes -->
  <%= render 'subjects/show_files', s: m %>
  </div>
  </td></tr>

  <!-- Si on peut modifier -->
  <% if canmodif && (m.user == current_user.sk || (current_user.sk.admin && !m.user.admin) || current_user.sk.root) %>
    <tr><td colspan="2" class="modify">
      <%= link_to "Modifier ce message", edit_subject_message_path(@subject, m, :q => q) %>
      <% if current_user.sk.admin? %>
         | <%= link_to "Supprimer ce message", subject_message_path(@subject, m), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce message ?" }  %>
      <% end %>
    </td></tr>
  <% end %>

</table>
