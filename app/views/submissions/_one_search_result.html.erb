<% if r[0] == @submission %>
  <% color_class = "info" %>
<% elsif r[0].correct? %>
  <% color_class = "success" %>
<% elsif r[0].waiting? %>
  <% color_class = "warning" %>
<% else %>
  <% color_class = "danger" %>
<% end %>
<tr class="table-ld-<%= color_class %>">
<td class="d-none d-md-table-cell text-center" style="width:70px;"><%= image_tag r[0].icon, :class => "svg-black-white" %></td>
<td class="d-none d-lg-table-cell" style="width:250px;"><%= write_date(r[0].created_at) %></td>
<td style="width:200px;"><%= r[0].user.linked_name %></td>
<td style="width:300px;"><%= r[1][0] %><b><u><%= r[1][1] %></u></b><%= r[1][2] %></td>
<td class="text-center" style="width:54px;"><%= link_to "Voir", problem_path(r[0].problem, :sub => r[0].id) %></td>
</tr>
