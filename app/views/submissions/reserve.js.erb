var div_reserved_by_nobody = document.getElementById("div_reserved_by_nobody");
var div_reserved_by_other = document.getElementById("div_reserved_by_other");
var div_reserved_by_me = document.getElementById("div_reserved_by_me");

var MI = document.getElementById("MathInput");
var PJ = document.getElementById("addFile");
var B1 = document.getElementById("B1");
var B2 = document.getElementById("B2");

var line_sub = document.getElementById("line_sub_<%= @submission.id %>")

div_reserved_by_nobody.style.display = "none"
div_reserved_by_other.style.display = "none"
div_reserved_by_me.style.display = "none"

<% if @what == 2 %>
  txt = "Cette soumission est en train d'être corrigée par <b><%= @correct_name %></b>."
  <% if current_user.sk.root? %>
    txt = txt + " Elle a été réservée le <%= write_date(@reservation_date) %>."
  <% end %>
  var text_reserved_by_other = document.getElementById("text_reserved_by_other");
  text_reserved_by_other.innerHTML = txt
  div_reserved_by_other.style.display = "block"
  line_sub.classList.add('table-warning-reder')
<% elsif @what == 3 %>
  div_reserved_by_me.style.display = "block"
  MI.disabled = false
  PJ.disabled = false
  B1.disabled = false
  B2.disabled = false
  line_sub.classList.add('table-warning-greener')
<% end %>
